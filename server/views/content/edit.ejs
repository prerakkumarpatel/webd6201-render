<div class="container" >

  <h1> <%=title%> Contact </h1>
    <div id="messageArea"></div>
  <div class=" row justify-content-lg-center g-3 ">
    <form method="post" class="col-md-10 col-sm-10 col-lg-6  bg-opacity-10 bg-dark m-3 p-5 rounded-3">
      <div class="input-group mb-3">
        <span class="input-group-text">Full Name </span>
        <input  id="fullName" name="fullName" value="<%= contact.FullName %>" type="text" class="form-control"
                aria-describedby="Full Name Input "  aria-label="Full Name Input" required>
      </div>
      <div class="input-group mb-3">
        <span  class="input-group-text">Contact Number</span>
        <input  id="contactNumber" name="contactNumber" value="<%= contact.ContactNumber %>" type="tel" class="form-control"
                aria-describedby="Contact Number Input "  aria-label="Contact Number Input" required>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">Email address</span>
        <input  id="emailAddress" name="emailAddress" value="<%= contact.EmailAddress %>"type="email" class="form-control"
                aria-describedby="Email Address Input "  aria-label="Email Address Input" required>
      </div>

      <% if(title === "Edit") { %>
        <button id="editButton" type="submit" class="btn btn-primary">
          <i class="fas fa-save fa-lg"></i> save</button>
      <% } else { %>
        <button id="addButton" type="submit" class="btn btn-primary">
          <i class="fas fa-plus-circle fa-lg"></i> Add</button>
      <% } %>
      <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning">
        <i class="fas fa-undo fa-lg"></i> Cancel</a>
    </form>
  </div></div>