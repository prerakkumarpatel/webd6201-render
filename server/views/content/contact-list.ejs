<div class="container">
  <h1> Contact List </h1>
  <a id="addButton" href="/add"  class="btn btn-primary btn-sm mb-3"><i class="fa-solid fa-plus"></i> Add Contact</a>
  <div class=" row  ">
    <div class="row">
      <div class="col">
        <table class="table table-dark table-striped table-boarded table-hover">
          <thead class=" ">
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Contact Number</th>
            <th scope="col"> Email Address</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody id="contactList">
          <% for (let count=0; count < contacts.length; count++) { %>
            <!-- Repeatable Row -->
            <tr>
              <td class="text-center"><%=count + 1 %></td>
              <td><%= contacts[count].FullName %></td>
              <td><%= contacts[count].ContactNumber %></td>
              <td><%= contacts[count].EmailAddress %></td>
              <td class="text-center">
                <a href="/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm edit">
                  <i class="fas fa-edit fa-sm"> Edit</i>
                </a>
              </td>
              <td class="text-center">
                <a href="/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm delete">
                  <i class="fas fa-trash-alt fa-sm"> Delete</i>
                </a>
              </td>
            </tr>
            <!-- end iteration -->
          <% } %>
          </tbody></table>
      </div>
    </div>
  </div>
</div>